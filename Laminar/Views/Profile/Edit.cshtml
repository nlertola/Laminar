@model Laminar.ViewModels.CreateEditUserViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="col-12">
        <form asp-action="Edit" asp-controller="Profile" method="POST" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" disabled />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="ProfilePicture">Upload Profile Picture</label>
                    <input type="file" name="PhotoUpload" id="PhotoUpload" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-md btn-success" />
                <a asp-controller="Profile" asp-action="Index" class="btn btn-md btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>